<p id="notice"><%= notice %></p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand %>
</p>

<p>
  <strong>Model:</strong>
  <%= @product.model %>
</p>

<p>
  <strong>Variant:</strong>
  <%= @product.variant %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Short description:</strong>
  <%= @product.short_description %>
</p>

<p>
  <strong>Long description:</strong>
  <%= @product.long_description %>
</p>

<p>
  <strong>Product type:</strong>
  <%= @product.product_type %>
</p>


<% if user_signed_in? %>
<%= form_for :order_product, :url => {:controller => "order_products", :action => "create"} do |person_form| %>
  <%= person_form.text_field :product_id, value: @product.id, type:"hidden" %>
  <%= person_form.text_field :user_id, value: current_user.id, type:"hidden" %>
  <%= submit_tag "Add to cart" %>
<% end %>
<% end %>